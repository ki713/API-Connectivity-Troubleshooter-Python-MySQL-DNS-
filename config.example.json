{
  "dns": {
    "hostnames": [
      "api.example.com",
      "db.example.com"
    ],
    "timeout": 3
  },
  "api": {
    "name": "Healthcheck",
    "method": "GET",
    "url": "https://api.example.com/health",
    "headers": {
      "Authorization": "Bearer {{API_TOKEN}}",
      "Accept": "application/json"
    },
    "timeout": 8,
    "expected_status": 200,
    "verify_tls": true
  },
  "db": {
    "name": "user-sync-check",
    "host": "127.0.0.1",
    "port": 3306,
    "user": "root",
    "password": "secret",
    "database": "appdb",
    "query": "SELECT COUNT(*) AS cnt FROM users WHERE status='active'",
    "expect_rows_min": 1
  }
}
